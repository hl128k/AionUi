    "backgroundColorTertiary": "#f5f5f5",
    "textColor": "#000000d9",
    "textColorSecondary": "#00000073",
    "textColorTertiary": "#00000040",
    "textColorDisabled": "#00000025",
    "borderColor": "#d9d9d9",
    "borderColorHover": "#4096ff",
    "borderColorFocus": "#1677ff",
    "borderRadius": "6px",
    "borderRadiusSmall": "4px",
    "borderRadiusLarge": "8px",
