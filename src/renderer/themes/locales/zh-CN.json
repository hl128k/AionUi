    "workspaceBorderColor": "#f0f0f0",
    "settingGroupBackground": "#ffffff",
    "settingGroupBorderColor": "#f0f0f0",
    "settingGroupPadding": "16px",
    "iconColor": "#00000073",
    "iconColorHover": "#000000d9",
    "iconColorActive": "#1677ff"
  },
  "i18nStyleMappings": [
    {
      "name": "chinese-text-optimization",
      "description": "中文文本显示优化",
      "keyConfigs": [
        {
          "key": "settings.theme",
          "selector": "[data-i18n-key='settings.theme']",
          "styles": {
            "letterSpacing": "0.05em",
            "fontWeight": "500"
          }
        },
        {
          "key": "conversation.welcome.title",
          "selector": "[data-i18n-key='conversation.welcome.title']",
          "styles": {
            "fontSize": "20px",
            "fontWeight": "600",
            "letterSpacing": "0.02em",
            "lineHeight": "1.4"
          }
        },
        {
          "key": "settings.themeSettings",
          "selector": "[data-i18n-key='settings.themeSettings']",
          "styles": {
            "fontSize": "16px",
            "fontWeight": "500"
          },
          "textLengthThreshold": 6
        }
      ]
    }
  ]
}
