{
  "id": "zh-CN-default",
  "name": "简体中文默认主题",
  "mode": "light",
  "description": "专为简体中文优化的默认主题",
  "locale": "zh-CN",
  "version": "1.0.0",
  "author": "AionUi Team",
  "createdAt": "2025-08-23",
  "codeHighlight": {
    "name": "GitHub Light (中文优化)",
    "background": "#ffffff",
    "foreground": "#24292e",
    "comment": "#6a737d",
    "keyword": "#d73a49",
    "string": "#032f62",
    "number": "#005cc5",
    "operator": "#d73a49",
    "function": "#6f42c1",
    "variable": "#e36209",
    "type": "#005cc5",
    "constant": "#005cc5",
    "class": "#6f42c1",
    "interface": "#005cc5",
    "namespace": "#6f42c1",
    "property": "#005cc5",
    "method": "#6f42c1",
    "parameter": "#e36209",
    "decorator": "#e36209",
    "annotation": "#6a737d",
    "tag": "#22863a",
    "attribute": "#6f42c1",
    "value": "#032f62",
    "punctuation": "#24292e",
    "bracket": "#24292e",
    "error": "#b31d28",
    "warning": "#e36209",
    "info": "#005cc5",
    "hint": "#6a737d",
    "selection": "#c8e1ff",
    "lineHighlight": "#f6f8fa",
    "cursor": "#24292e"
