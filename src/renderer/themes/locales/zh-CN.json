    "fontSize": "14px",
    "fontSizeSmall": "12px",
    "fontSizeLarge": "16px",
    "lineHeight": "1.5715",
    "fontWeight": "400",
    "fontWeightStrong": "600",
    "shadowSmall": "0 2px 4px 0 rgba(0, 0, 0, 0.06)",
    "shadowMedium": "0 4px 8px 0 rgba(0, 0, 0, 0.12)",
    "shadowLarge": "0 8px 16px 0 rgba(0, 0, 0, 0.16)",
    "spacing": "8px",
    "spacingSmall": "4px",
    "spacingLarge": "16px",
    "spacingXLarge": "24px",
    "zIndexDropdown": "1050",
    "zIndexModal": "1000",
    "zIndexTooltip": "1060",
    "successColor": "#52c41a",
    "warningColor": "#faad14",
    "errorColor": "#ff4d4f",
    "infoColor": "#1677ff",
    "siderBackground": "#fafafa",
    "siderWidth": "240px",
    "siderCollapsedWidth": "64px",
    "siderBorderColor": "#f0f0f0",
    "mainBackground": "#ffffff",
